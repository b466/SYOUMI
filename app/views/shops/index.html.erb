      <h3>店舗一覧</h3>
      <% @shops.each do |shop| %>
      <div class="product-items clearfix">
                <p><%= link_to shop_path(shop) do %>
                <%= attachment_image_tag shop, :image, :size =>'300x300', fallback: "no_image.jpg" %></p>
                <% end %>
                <p><%= shop.name %></p>
                <%= shop.products.name %>
                <% end %>
		</div>		
