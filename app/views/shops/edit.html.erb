
<h4>店舗編集</h4>

<%= form_with model: @shop, url: shop_path(@shop), local: true do |f| %>

<div>
      <%= f.label :店舗画像 %>
   <%= f.attachment_field :image %>
    </div>

    <div>
      <%= f.label :店舗名%>
      <%= f.text_field :name, class: "form-control"  %>
    </div>


    <div>
      <%= f.label :店舗説明 %>
      <%= f.text_area :explanatory, class: "form-control"  %>
    </div>

        <div>
      <%= f.label :URL %>
      <%= f.text_field :shop_url, class: "form-control"  %>
    </div>

    <div>
      <%= f.label :電話番号 %><br>
      <%= f.text_field :phone_number, class: "form-control"  %>
    </div>

        <div>
      <%= f.label :住所 %><br>
      <%= f.text_field :address, class: "form-control"  %>
    </div>

    <div>
      <%= f.submit "新規登録", class: "btn btn-primary" %>
    </div>

    <% end %>
  </div>
  <div class="col-xs-1"></div>
</div>