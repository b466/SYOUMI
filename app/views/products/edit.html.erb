
<h4>商品編集</h4>

<%= form_with model: @product, url: admin_product_path(@product), local: true do |f| %>

<div><%= f.label :初品画像 %>
	<%= f.attachment_field :image, class: "form-control"   %>
</div>

<div>
<%= f.label :商品名 %>
<%= f.text_field :name, class: "inqut" %>
</div>

<%= f.label :商品説明 %>
<%= f.text_area :explanatory, class: "form-control"   %>

<div>
<%= f.label :値段 %>
<%= f.text_field :price %>
</div>

<%= f.submit '変更を保存' %>
<% end %>
