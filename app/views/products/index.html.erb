      <h3>商品一覧</h3>
      <% @products.each do |product| %>
      
                <p><%= link_to product_path(product) do %>
                <%= attachment_image_tag product, :image, :size =>'150x120', fallback: "no_image.jpg" %>
                <% end %><p>
                <p><%= product.name %></p>
                <p><%= number_to_currency(product.price, :format => "%u%n", :unit => "￥") %></p>
      </div>
      <% end %>