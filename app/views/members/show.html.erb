
<section class="section">
	<div class="container">
		<div class="columns is-centered">
			<div class="column is-4">
				<div class="card">
					<div class="card-image">
						
						<%= @member.first_name %>
						<%= @member.last_name %>
						

						<div class="card-content">
							<div class="media">
								<div class="media-content">
									<%= @member.email %>
								</div>
							</div>
							<div class="content">
								<%= @member.phone_number %>
							</div>
						</div>
					</div>
				</div>

				<%= link_to "編集", edit_member_path(@member) %>

				<div class="column is-7">
					<article class="panel is-link">
						<p class="panel-block">
							<%= link_to "店舗登録", new_shop_path %>
						</p>
						<div class="panel-block">
							<p class="control">
								<%= link_to "店舗編集", edit_shop_path%>

							</p>
							<article class="panel is-link">
							<p class="panel-block">
								<%= link_to "いいね一覧", favorites_path
								%>
							</p>
						</article>

						</article>
					</div>
				</div>
			</div>
		</div>
	</section>

<% @shops.each do |shop| %>
<%= attachment_image_tag shop, :image, :size =>'300x300', fallback: "no_image.jpg" %>
<div class="title"><%= shop.name %></div>
<%= link_to "料理を登録", new_shop_product_path(shop) %>
<%= link_to "店舗編集", edit_shop_path%>
<% end %>





