
<div class="columns">
	<div class="container">

		<div class="column is-7">
			<div class="card">
				<div class="card-image">
					<div class="card-content">
						<%= @member.first_name %>
						<%= @member.last_name %>
					</div>

					<div class="card-content">
						<div class="media">
							<div class="media-content">
								<%= @member.email %>
							</div>
						</div>
						<div class="content">
							<%= @member.phone_number %>
						</div>
						<footer class="card-footer">
							<div class="content">
								<%= link_to "編集", edit_member_path(@member), class: "btn-primary animated button fadeIn infinite" %>
							</div>
							<div class="content">
								<%= link_to "店舗登録", new_shop_path, class: "btn-primary animated button fadeIn infinite" %>
							</div>
							<div class="content">
								<%= link_to "いいね一覧", favorites_path, class: "btn-primary animated button fadeIn infinite" %>
							</div>

						</footer>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="column is-6">
		<% @shops.each do |shop| %>
		<%= attachment_image_tag shop, :image, :size =>'300x300', fallback: "no_image.jpg" %>
		<div class="title"><%= shop.name %></div>
		<%= link_to "店舗編集", edit_shop_path(shop), class: "btn btn-success" %>
		<%= link_to "料理を登録", new_shop_product_path(shop), class: "btn btn-success" %>
		<%= link_to "料理の一覧", shop_products_path(shop), class: "btn btn-success" %>
		<% end %>
	</div>

</div>








